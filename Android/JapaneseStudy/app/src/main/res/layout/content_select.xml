<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SelectActivity"
    tools:showIn="@layout/activity_select">


    <Button
        android:id="@+id/cards_button"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:text="Flash Cards" />

    <Button
        android:id="@+id/verb_button"
        android:layout_width="250dp"
        android:layout_marginTop="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:text="Verb Conjugations" />

    <Button
        android:id="@+id/adjective_button"
        android:layout_width="250dp"
        android:layout_marginTop="290dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:text="Adjective Conjugations" />

    <Button
        android:id="@+id/kanji_button"
        android:layout_width="250dp"
        android:layout_marginTop="430dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:text="Kanji" />
</RelativeLayout>
